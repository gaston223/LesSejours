{% extends 'admin/base.html.twig' %}

{% block title %}Administration des utilisateurs{% endblock %}

{% block body %}

    <div class="container-fluid">
        <h1 class="my-5">
            Gestion des utilisateurs
        </h1>
        <table class="table table-hover">
            <thead>
            <tr>
                <th>Id</th>
                <th>Utilisateur</th>
                <th>E-Mail</th>
                <th>Introduction</th>
                <th>Description</th>
                <th>RÃ©servations</th>
                <th>Commentaires </th>
                <th>Annonces</th>
                <th>Roles</th>
                <th>Actions</th>
            </tr>
            </thead>

            <tbody>
            {% for user in pagination.data %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td><img src="{{ user.picture }}" alt="" class="avatar avatar-micro"> {{ user.fullName }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.introduction | raw }}</td>
                    <td>{{ user.description |slice(0,150) | raw }}</td>
                    <td>{{ user.bookings | length}}</td>
                    <td>{{ user.comments | length}}</td>
                    <td>{{ user.ads| length }}</td>
                    <td>{{ user.roles | join(', ')}}</td>
                    <td>
                        <a href="{{ path('admin_user_edit', {'id': user.id}) }}" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                        <a href="{{ path('admin_user_delete', {'id': user.id}) }}" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>

        </table>
        {{ pagination.display }}
    </div>

{% endblock %}